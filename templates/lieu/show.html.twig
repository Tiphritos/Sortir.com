{% extends 'base.html.twig' %}

{% block title %}Lieu{% endblock %}

{% block body %}
    <h1>Lieu</h1>


    <section >
        <div class="container py-5 mt-5">
            <div class="row">
                <div class="col">

                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4 couleurFond">
                        <div class="card-body text-center">

                            <h5 class="my-3 ">{{ lieu.nomLieu }}</h5>


                            <div class="d-flex justify-content-center mb-2">
                                <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}" class="btn btn-outline-primary ms-1">Modifier </a>
                                <form method="post" action="{{ path('app_lieu_delete', {'id': lieu.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce lieu?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lieu.id) }}">
                                    <button class="btn btn-outline-primary ms-1">Supprimer</button>
                                </form>

                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-8">
                    <div class="card mb-4 couleurFond">
                        <div class="card-body">
                            <div class="row ">
                                <div class="col-sm-3">
                                    <p class="  mb-0">Rue </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class=" mb-0 ">{{ lieu.rue }}</p>
                                </div>
                            </div>
                            <hr class="soulignage">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0  ">Ville</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class=" mb-0">{{ lieu.villesNoVille.nomVille }}</p>
                                </div>
                            </div>
                            <hr class="soulignage">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 ">Code postal</p>
                                </div>
                                <div class="  col-sm-9">
                                    <p class=" mb-0">{{ lieu.villesNoVille.codePostal }}</p>
                                </div>
                            </div>


                    </div>

                </div>
            </div>
        </div>
    </section>
    <a href="{{ path('app_lieu_index') }}" class="  btnAffichagePage">Retour à la liste </a>
    <a href="{{ path('app_accueil') }}" class="  btnAffichageRetourAccueil">Retour à l'accueil </a>
{% endblock %}
