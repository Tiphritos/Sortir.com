{% extends 'base.html.twig' %}

{% block title %}New Ville{% endblock %}

{% block body %}
    <h1  class="titreh1">Creer une nouvelle Ville</h1>

<div class="container p-5 ">

    <div class="row">
        <div class="col">

        </div>
    </div>

    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card couleurFond h-100">
                <div class="card-body text-center">
                    {{ form_start(form) }}
                    <div class="row ">

                        <div class="col-sm-12">
                            <p class=" mb-0 ">  {{ form_row(form.nom_ville) }}</p>
                        </div>
                    </div>
                    <hr class="soulignage">


                    <div class="row">

                        <div class="col-sm-12">
                            <p class=" mb-0">   {{ form_row(form.code_postal) }}</p>
                        </div>
                    </div>
                    <hr class="soulignage">
                    <div class="row">
                        <div class="col-12">
                            <button class="boutons">{{ button_label|default('Enregistrer') }}</button>
                            <a href="{{ path('app_ville_index') }}" class="boutons pb-2 pt-2">Annuler</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    {{ form_end(form) }}

    <a href="{{ path('app_ville_index') }}" class="  btnAffichagePage">Retour à la liste </a>
    <a href="{{ path('app_accueil') }}" class="  btnAffichageRetourAccueil">Retour à l'accueil </a>
{% endblock %}
