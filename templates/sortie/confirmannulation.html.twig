{% extends 'base.html.twig' %}
{% block body %}
 <h1  class="titreh1">Motif de l'annulation</h1>


    <div class="container" >

    <a href="{{ path('app_accueil') }}" class="btnAffichageRetourAccueil">Retour Ã  l'accueil</a>
    <section >
        <div class="container py-5 mt-5">
            <div class="row">
                <div class="col">

                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4 couleurFond">
                        <div class="card-body text-center">
                            <img src="{{ asset('uploads/images/'~ sortie.urlPhoto) }}" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                             <h1> {{ sortie.nom }}</h1>

                           <h5>{{lieu.nomLieu }}</h5>
                            <div class="d-flex justify-content-center mb-2">
                                    <form action="{{ path('app_sortie_annulation', {'id':sortie.id}) }}" method="post">
                                        <button type="submit" class="boutons">Annuler la sortie</button>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-8">
                    <div class="card mb-4 couleurFond">
                        <div class="card-body">
                            <div class="row ">
                                <div class="col-sm-3">
                                    <p class="  mb-0">Motif de l'annulation: </p>
                                </div>
                                <div class="col-sm-9">
                                    <div class="col-10">
                                   <input type="text" name="motifAnnulation" id="motifAnnulation" class="col-10">
                                    </div>
                                    </form>
                                </div>
                            </div>
                            <hr class="soulignage">
                            <div class="row ">
                                <div class="col-sm-3">
                                    <p class="  mb-0">Date debut </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class=" mb-0 ">{{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i') : '' }}</p>
                                </div>
                            </div>
                            <hr class="soulignage">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0  ">Date de cloture</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class=" mb-0">{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i') : '' }}</p>
                                </div>
                            </div>
                            <hr class="soulignage">
                            <div class="row">
                                <div class="col-4">
                                    <p class="mb-0 ">Nombre max d'inscriptions</p>
                                </div>
                                <div class="  col-8">
                                    <p class=" mb-0">{{  sortie.nbInscriptionsMax }}</p>
                                </div>
                            </div>
                            <hr class="soulignage">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 ">Description</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class=" mb-0">{{ sortie.descriptionInfos }}</p>
                                </div>
                            </div>


                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}