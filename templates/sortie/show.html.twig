{% block body %}
    <h1>Sortie</h1>



    <section>
    <div class="container py-5 ">
        <div class="row">
            <div class="col">

            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4 couleurFond">
                    <div class="card-body text-center">
                        <img src="{{ asset("img/ProfilDefault.png") }}" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3 ">{{ sortie.nom }}</h5>


                        <div class="d-flex justify-content-center mb-2">
                            <a href="{{ path('app_inscription', {'id': app.user.id,'sortie':sortie.id}) }}"class="btn btn-outline-primary ms-1">Inscription</a>
                            <a href="{{ path('app_desistement', {'id': app.user.id,'sortie':sortie.id}) }}"class="btn btn-outline-primary ms-1">Desistement</a>
